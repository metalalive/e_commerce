{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "[%(asctime)s] %(levelname)s %(name)s %(module)s:%(lineno)d: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "detailed",
      "stream": "ext://sys.stdout"
    },
    "localfile": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "/app/log/storefront-app-server.log",
      "when": "midnight",
      "backupCount": 8
    }
  },
  "loggers": {
    "store.shared": {
      "level": "WARNING",
      "handlers": ["localfile"],
      "propagate": false
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": ["localfile"]
  }
}
